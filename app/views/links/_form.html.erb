<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Sujet" %><br />
    <%= f.text_field :title, :placeholder => "Quel est le sujet de ton partage?", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Ajoute une image" %> <i>(Facultatif)</i><br />
    <%= f.file_field :image %><small><i class="fa fa-info-circle" style="padding-right: 7px;"> Taille maximum: 2mb</i></small>
  </div>


  <div class="form-group">
    <%= f.label "Ton partage" %><br />
    <%= f.text_area :message, cols: "30", rows: "10", :placeholder => "", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit "Partager", class: "btn btn-green center-block" %>

  </div>
<% end %>
