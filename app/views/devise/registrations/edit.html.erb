<h2 class="text-center">Modifier ton compte</h2>


<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, :html => { :multipart => true } do |f| %>
  <%= devise_error_messages! %>


<div class="form-inputs">
    <div class="form-group">
      <%= f.label "Nom d'utilisateur" %>
      <%= f.text_field :name, class: "form-control", :autofocus => true %>
    </div>


  <div class="form-inputs">
    <div class="form-group">
      <%= f.label "Courriel" %>
      <%= f.email_field :email, class: "form-control", :autofocus => true %>
    </div>
     <div class="form-group">
      <%= f.label "Nouveau mot de passe" %><br> <small><i class="fa fa-info-circle" style="padding-right: 7px;"> Seulement remplir si tu veux changer ton mot de passe</i></small>
      <%= f.password_field :password, class: "form-control", :autocomplte => "off" %>
    </div>
     <div class="form-group">
      <%= f.label "Mot de passe actuel" %> <br> <small><i class="fa fa-info-circle" style="padding-right: 7px;">  Confirmer ton mot de passe actuel pour enregistrer les changements</i></small>
      <%= f.password_field :current_password, class: "form-control", :autocomplte => "off" %>
    </div>
    <div class="form-group">
      <%= f.submit "Modifier", class: "btn btn-green" %> 
    </div>

  </div>
<% end %>

